{
  "name": "discuss-deck-server",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "keywords": [],
  "author": "",
  "description": "",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc -w",
    "run:server": "TS_NODE_BASEURL=./dist node -r tsconfig-paths/register ./dist/index.js",
    "dev:server": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register ./src/index.ts",
    "db.premigrate": "yarn build && npx mikro-orm-esm cache:clear && npx mikro-orm-esm cache:generate",
    "db.migrate": "npx mikro-orm-esm migration:create"
  },
  "dependencies": {
    "@apollo/server": "^4.10.4",
    "@mikro-orm/cli": "^6.2.5",
    "@mikro-orm/core": "^6.2.5",
    "@mikro-orm/migrations": "^6.2.5",
    "@mikro-orm/postgresql": "^6.2.5",
    "@mikro-orm/reflection": "^6.2.5",
    "config": "^3.3.11",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "graphql": "^16.8.1",
    "graphql-scalars": "^1.23.0",
    "pg": "^8.11.5",
    "reflect-metadata": "^0.2.2",
    "type-graphql": "^2.0.0-rc.1"
  },
  "devDependencies": {
    "@types/config": "^3.3.4",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.11",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.5"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/mikro-orm.config.ts",
      "./dist/mikro-orm.config.js"
    ]
  },
  "engines": {
    "node": ">=22.1.0",
    "npm": ">=10.7.0"
  }
}
